{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#assets/*": ["./src/assets/*"],
      "#data/*": ["./src/data/*"],
      "#engine/*": ["./src/engine/*"],
      "#model/*": ["./src/model/*"],
      "#pages/*": ["./src/pages/*"],
      "#routes/*": ["./src/routes/*"],
      "#store/*": ["./src/store/*"],
      "#ui/*": ["./src/ui/*"],
      "#utils/*": ["./src/utils/*"]
    },
    // "sourceMap": true, // not needed when assembled with webpack
    // "watch": true, // not needed when assembled with webpack
    "pretty": true,
    "strict": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    // "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"]
  },
  "exclude": ["node_modules", "tests"]
}
